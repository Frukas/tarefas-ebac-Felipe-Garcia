package br.com.mod5;

public class main {

	public static void main(String[] args) {
		
		String nome = "";
		
		if(args.length <= 0) {
			nome = makeFrase(args);
		}
		
		System.out.print("Oi mundo" + nome);

	}
	
    private static String makeFrase(String[] args)    
    {
        StringBuilder frase = new StringBuilder();
        for(String a : args){
            frase.append(a);
            frase.append(" ");
        }
        return frase.toString().trim();
    }
}