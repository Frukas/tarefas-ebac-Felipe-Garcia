package br.com.mod5;

public class main {

    public static void main(String[] args) {

        if(args.length <= 0){
            System.out.println("Hello World, no name!");
        }else{            
            System.out.println("Hello World! " + makeFrase(args));
        }        
    }
	
    private static String makeFrase(String[] args)    
    {
        StringBuilder frase = new StringBuilder();
        for(String a : args){
            frase.append(a);
            frase.append(" ");
        }
        return frase.toString().trim();
    }
}